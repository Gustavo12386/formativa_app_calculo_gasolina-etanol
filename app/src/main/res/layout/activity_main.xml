<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6CDF71"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="378dp"
        android:layout_height="117dp"
        android:layout_marginTop="92dp"
        android:text="Calculando Percentual do Valor do Etanol e da Gasolina"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="144dp"
        android:background="@color/botao_cor"
        android:text="Calcular"
        android:textColorHighlight="#EFEFEF"
        android:textColorLink="@color/botao_cor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editGasolina"
        app:strokeColor="#EFEFEF" />

    <EditText
        android:id="@+id/editGasolina"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="280dp"
        android:ems="10"
        android:inputType="text"
        android:text="Preço Gasolina:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editEtanol"
        android:layout_width="199dp"
        android:layout_height="58dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="395dp"
        android:ems="10"
        android:inputType="text"
        android:text="Preço Etanol:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.853" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="243dp"
        android:layout_height="85dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="65dp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>